@{
    Layout = "~/Views/BeAQcian/Shared/_BeAQcianLayout.cshtml";
    <!-- Use the BeAQcian-specific layout -->
    ViewBag.Title = "Data Privacy Notice";
    <!-- Set the page title -->
    ViewBag.CustomHeadingStyle = "text-uppercase";
    <!-- Example custom heading style -->
}

@section Styles {
    <style>
        /* Page-specific styles for BeAQcian pages */
        main {
            margin-top: 150px;
        }

        #qcian-details {
            background-color: white;
            height: 60vh;
            margin-bottom: 0;
            overflow-y: auto;
        }

        div#section {
            margin-bottom: 2rem;
            overflow: hidden;
        }

        .fa-arrow-rotate-left {
            font-size: 25px;
            border: 2px solid black;
            border-radius: 50%;
        }

        .container > div > a.back {
            position: absolute;
            top: 155px;
            left: 35px;
        }

        #qcian-details::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            background-color: #F5F5F5;
        }

        #qcian-details::-webkit-scrollbar {
            width: 5px;
            background-color: #F5F5F5;
        }

        #qcian-details::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
            background-color: #555;
        }
    </style>
}

<div class="border border-black rounded-top-3 rounded-bottom-5" id="section">
    <!-- Back link button -->
    <a href="@Url.Action("Index", "Home")" class="back">
        <i class="fa-solid fa-arrow-rotate-left p-2 text-black"></i>
    </a>

    <!-- Page Title with dynamic heading style -->
    <h1 class="text-white fs-2 rounded-top-3 rounded-bottom-4 @ViewBag.CustomHeadingStyle" id="subHeading">
        @ViewBag.Title <!-- Display the page title dynamically -->
    </h1>

    <!-- Dynamic content section -->
    <div id="qcian-details" class="p-4 rounded-bottom-5">
        @Html.Raw(ViewBag.DynamicContent) <!-- Render the dynamic content safely -->
    </div>
</div>
